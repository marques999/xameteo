<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:globalization="clr-namespace:Xameteo.Globalization;assembly=Xameteo"
             x:Class="Xameteo.Views.MainViewDetail"
             Title="{globalization:Translate Title_Locations}">
  <StackLayout Orientation="Vertical">
    <Button Text="Insert Location" HorizontalOptions="CenterAndExpand" Clicked="InsertLocation"></Button>
    <ListView ItemsSource="{Binding Items}"
            ItemTapped="ListItemClicked"
            CachingStrategy="RecycleElement">
      <ListView.ItemTemplate>
        <DataTemplate>
          <ViewCell>
            <StackLayout Orientation="Horizontal">
              <Button Text="Delete" Clicked="ButtonClicked" CommandParameter="{Binding .}"></Button>
              <StackLayout Orientation="Vertical">
                <Label Text="{Binding Weather.Location.Name}"
                       Style="{DynamicResource ListItemTextStyle}" />
                <Label Text="{Binding Weather.Current.Temperature}"
                       Style="{DynamicResource ListItemDetailTextStyle}"/>
              </StackLayout>
            </StackLayout>
          </ViewCell>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </StackLayout>
</ContentPage>